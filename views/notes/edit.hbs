{{>sidenav}}
<div class="container" style="margin-top:25px">
  <h1>{{note.name}}</h1>
  <br>

  <form action="/notes/edit/{{note._id}}" method="post">
    <div class="form-group">
      <label for="formGroupExampleInput">Name:</label>
      <input type="text" class="form-control" name="name" placeholder="Enter name" value="{{note.name}}" required>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Date:</label>
      <input type="date" class="form-control" name="date" placeholder="Enter date" value="{{note.date}}" required>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Time:</label>
      <input type="text" class="form-control" name="time"placeholder="Enter time" value="{{note.time}}">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Location:</label>
      <input type="text" class="form-control" name="location" placeholder="Enter location" value="{{note.location}}">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Description:</label>
      <textarea class="form-control" name="description" rows="3" maxlength="500" placeholder="Enter description">{{note.description}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>
  </form>
</div>
<script type="text/javascript">
  $("#nav-notes").addClass("active");
  $("#nav-plans").removeClass("active");
  $("#nav-help").removeClass("active");
  $("#nav-contact").removeClass("active");
</script>
